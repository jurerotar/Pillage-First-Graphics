{
  "name": "@pillage-first/graphics",
  "version": "0.0.4",
  "type": "module",
  "description": "Pillage-First Graphics Library provides graphical assets for the game Pillage First! (Ask Questions Later). This library includes SVG-based graphics, as well as organized image packs.",
  "author": "Jure Rotar <hello@jurerotar.com>",
  "homepage": "https://github.com/jurerotar/Pillage-First-Graphics",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jurerotar/Pillage-First-Graphics.git"
  },
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "files": ["dist"],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint:check": "npx @biomejs/biome lint",
    "lint": "npx @biomejs/biome lint --fix",
    "format:check": "npx @biomejs/biome format",
    "format": "npx @biomejs/biome format --write",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "build:types": "tsc --emitDeclarationOnly",
    "prepublishOnly": "npm run build && npm run build:types",
    "release": "npm publish --access public"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "react": "19.1.0",
    "typescript": "5.8.3",
    "vite": "6.3.4",
    "vite-plugin-static-copy": "3.0.0",
    "vite-plugin-svgr": "4.3.0"
  }
}
